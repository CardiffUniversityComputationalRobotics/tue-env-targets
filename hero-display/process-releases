#! /usr/bin/env bash
set -e

STDIN=$(cat -)

RELEASES=$(echo "$STDIN" | awk 'match($1, /^v[0-9]+.[0-9]+.[0-9]+$/) {print $0}')

readarray -t lines < <(echo "$RELEASES")
LATEST="${lines[0]}"

if [[ -n "$LATEST" ]]
then
    TAG=$(echo "$LATEST" | awk '{print $1}')
    URL=$(echo "$LATEST" | awk '{print $2}')

    if [[ -f "$CUCR_BIN/hero_display.d/$TAG" ]]
    then
        echo -e "hero-display:\t\tno updates found"
    else
        echo -e "hero-display:\t\tnew version $TAG found"
        mkdir -p "$CUCR_BIN/hero_display.d"
        wget "$URL" -O "$CUCR_BIN/hero_display.d/hero-display.AppImage"
        chmod +x "$CUCR_BIN/hero_display.d/hero-display.AppImage"
        ln -sf "$CUCR_BIN/hero_display.d/hero-display.AppImage" "$CUCR_BIN/hero_display"
        touch "$CUCR_BIN/hero_display.d/$TAG"
    fi
else
    cucr-install-debug "No matching release found"
fi

set +e
