#! /usr/bin/env bash
set -e

STDIN=$(cat -)

RELEASES=$(echo "$STDIN" | awk 'match($1, /^v[0-9]+.[0-9]+.[0-9]+$/) {print $0}')
RELEASES_ALPHA=$(echo "$STDIN" | awk 'match($1, /^v[0-9]+.[0-9]+.[0-9]+-alpha[0-9]+$/) {print $0}')

readarray -t lines < <(echo "$RELEASES")
LATEST="${lines[0]}"

readarray -t lines < <(echo "$RELEASES_ALPHA")
LATEST_ALPHA="${lines[0]}"

if [[ -n "$LATEST" ]]
then
    TAG=$(echo "$LATEST" | awk '{print $1}')
    URL=$(echo "$LATEST" | awk '{print $2}')

    if [[ -f "$CUCR_BIN/dashboard/$TAG" ]]
    then
        echo -e "dashboard:\t\tno updates found"
    else
        echo -e "dashboard:\t\tnew version $TAG found"
        mkdir -p "$CUCR_BIN/dashboard"
        wget "$URL" -O- | tar -xzv --directory "$CUCR_BIN/dashboard"
        ln -sf "$CUCR_BIN/dashboard/dashboard" "$CUCR_BIN/cucr-dashboard"
        touch "$CUCR_BIN/dashboard/$TAG"
    fi
fi

if [[ -n "$LATEST_ALPHA" ]]
then
    TAG=$(echo "$LATEST_ALPHA" | awk '{print $1}')
    URL=$(echo "$LATEST_ALPHA" | awk '{print $2}')

    if [[ -f "$CUCR_BIN/dashboard-alpha/$TAG" ]]
    then
        echo -e "dashboard-alpha:\tno updates found"
    else
        echo -e "dashboard-alpha:\tnew version $TAG found"
        mkdir -p "$CUCR_BIN/dashboard-alpha"
        wget "$URL" -O- | tar -xzv --directory "$CUCR_BIN/dashboard-alpha"
        ln -sf "$CUCR_BIN/dashboard-alpha/dashboard" "$CUCR_BIN/cucr-dashboard-alpha"
        touch "$CUCR_BIN/dashboard-alpha/$TAG"
    fi
fi

set +e
